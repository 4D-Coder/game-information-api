{
  "swagger": "2.0",
  "info": {
    "title": "StarChild API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/v1/users": {
      "post": {
        "tags": ["Users"],
        "description": "Creates a new user",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "user",
            "description": "User resource object to be created",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserResource"
            }
          }
        ],
        "responses": {
          "201": {"description": "Created"},
          "422": {"description": "Unprocessable Entity"}
        }
      }
    }
  },
  "definitions": {
    "UserResource": {
      "type": "object",
      "required": ["data"],
      "properties": {
        "data": {
          "type": "object",
          "required": ["type", "attributes"],
          "properties": {
            "type": {"type": "string", "enum": ["users"]},
            "attributes": {
              "type": "object",
              "required": ["username", "password", "password_conf"],
              "properties": {
                "name": {"type": "string"},
                "username": {"type": "string"},
                "password": {"type": "string"},
                "password_conf": {"type": "string"}
              }
            }
          }
        }
      }
    }
  }
}
